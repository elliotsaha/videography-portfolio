{
  "name": "film-portfolio",
  "description": "A Film Portfolio made with NextJS",
  "version": "1.0.0",
  "private": true,
  "author": "Heril Saha <herilsaha06@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "test": "jest --env=jsdom ---passWithNoTests --detectOpenHandles --runInBand --ci --reporters=default --reporters=jest-junit --coverage --coverageDirectory=coverage",
    "test:watch": "jest --env=jsdom ---passWithNoTests --watchAll",
    "test:update": "jest --env=jsdom --updateSnapshot",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "postinstall": "husky install",
    "commit": "cz",
    "gen": "ts-node ./src/scripts/generateComponent.ts"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "@styled-system/css": "5.1.5",
    "@types/enzyme": "3.10.9",
    "@types/jest": "27.0.1",
    "@types/styled-components": "5.1.14",
    "enzyme": "3.11.0",
    "jest": "27.2.0",
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "5.3.1",
    "styled-system": "5.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/node": "14.17.15",
    "@types/react": "17.0.20",
    "@types/react-dom": "17.0.9",
    "@types/styled-system": "5.1.13",
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-plugin-styled-components": "1.13.2",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.2",
    "jest-junit": "12.2.0",
    "lint-staged": "11.1.2",
    "prettier": "2.4.0",
    "ts-node": "10.2.1",
    "typescript": "4.4.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
